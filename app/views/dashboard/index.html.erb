<%= link_to 'Dodaj przepis', new_recipe_path %>
<table>
  <tr>
    <th>Nazwa</th>
    <th>Opis</th>
    <th>Czas trwania (w minutach)</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr>
      <td><%= link_to recipe.title, recipe %></td>
      <td><%= recipe.description %></td>
      <td><%= recipe.duration %></td>
    </tr>
  <% end %>
</table>
